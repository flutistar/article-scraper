
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <ul class="nav navbar-nav">
    <li class="navbar-brand">Medium Article Scraper</li>
    <li class="nav-item">
      <a class="nav-link" href="/">Home</a>
    </li>
    <li class="nav-item active">
      <a class="nav-link" href="/saved">Saved Articles</a>
    </li>
  </ul>
</nav>
<div class="jumbotron text-center">
  <div class="caption">
    <h1>Saved Articles</h1>
  </div>
</div>

<div class="container-fluid saved-container">
  {{#each articles}} {{> article-block}} {{/each}}
</div>

<div class="modal fade" id="note-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="title"><strong>Notes for this article</strong></h2>
        <button type="button" class="note-close close close-clear" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <h6 id="note-content"></h6>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary close-clear note-close" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="delete-success" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="title"><strong>Deleted</strong></h2>
        <button type="button" class="delete-success-close close close-clear" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <h6>Successfully removed this article from saved</h6>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary close-clear delete-success-close" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script src="/js/saver.js"></script>